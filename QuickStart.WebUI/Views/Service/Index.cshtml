@model List<QuickStart.WebUI.Dtos.Services.ResultServicesDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/_AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Hizmetler</h4>
			<p class="card-description">
				Hizmet<code>Listesi</code>
			</p>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>#</th>
							<th>Hizmet</th>
							<th>Açıklama</th>
							<th>İcon</th>
							<th>Sil</th>
							<th>Güncelle</th>

						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.serviceId</td>
								<td>@item.title</td>
								<td>@item.description</td>
								<td>@item.iconUrl</td>
								<td><a href="/Service/DeleteService/@item.serviceId" class="btn btn-danger">Sil</a></td>
								<td><a href="/Service/UpdateService/@item.serviceId" class="btn btn-success">Güncelle</a></td>
							</tr>
						}


					</tbody>
				</table>
				<a href="/Service/CreateService" class="btn btn-info">Yeni Hizmet Girişi</a>
			</div>
		</div>
	</div>
</div>