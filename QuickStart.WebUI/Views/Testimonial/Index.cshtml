@model List<QuickStart.WebUI.Dtos.Testimonials.ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_AdminLayout/Index.cshtml";
}




<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Müşteriler</h4>
            <p class="card-description">
                Müşteri<code>Listesi</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Resmi</th>
                            <th>Adı</th>
                            <th>Puanı</th>
                            <th>mesleği</th>
                            <th>Yorumu</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                            <td class="py-1">
                                    <img src=@item.imageUrl alt="image" />
                            </td>
                                <td>@item.fullName</td>
                                <td>@item.rate</td>
                            <td>@item.title</td>
                            <td>@item.description</td>
                            <td>May 15, 2015</td>
                                <td><a href="/Testimonial/DeleteTestimonial/@item.testimonialId" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Testimonial/UpdateTestimonial/@item.testimonialId" class="btn btn-success">Güncelle</a></td>
                        </tr> 
                        }
                       
                     
                    </tbody>
                </table>
                <a href="/Testimonial/UpdateTestimonial" class="btn btn-success">Yeni Müşteri Ekleme Sayfası</a>
            </div>
        </div>
    </div>
</div>