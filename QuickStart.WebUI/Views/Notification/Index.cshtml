@model List<QuickStart.WebUI.Dtos.Notification.ResultNotificationWithNotificationTypeDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/_AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Bildirimler</h4>
			<p class="card-description">
				Bildirim<code>Listesi</code>
			</p>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>#</th>
							<th>Başlık</th>
							<th>İçerik</th>
							<th>Tür</th>
							<th>Durum</th>
							<th>Sil</th>
							<th>Güncelle</th>

						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							count++;
							<tr>
								<td>@count</td>
								<td>@item.title</td>
								<td>@item.content</td>
								<td>@item.notificationTypeName</td>
								<td>@(item.isRead ? "Okundu" : "Okunmadı")</td>
								<td><a href="/Notification/DeleteNotification/@item.notificationId" class="btn btn-danger">Sil</a></td>
								<td><a href="/Notification/UpdateNotification/@item.notificationId" class="btn btn-success">Güncelle</a></td>
							</tr>
						}


					</tbody>
				</table>
				<a href="/Notification/CreateNotification" class="btn btn-info">Yeni Bildirim Ekleme Sayfası</a>
			</div>
		</div>
	</div>
</div>